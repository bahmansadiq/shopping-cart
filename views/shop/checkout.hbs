<div class="row">
	     <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
	     	<form action="/" method="post" id="checkout-form">
	     			<div class="row"> 
	     				<div class="col-xs-12"> 
	     					<label for="name">Name </lable> 
	     					<input type="text" id="name" class="form-control" required> 
	     				</div>
	     			 </div>

	     			 <div class="row"> 
	     				<div class="col-xs-12"> 
	     					<label for="address">Address </lable> 
	     					<input type="text" id="address" class="form-control" required> 
	     				</div>
	     			</div>
	     			<hr>
	     			<div class="row"> 
	     				<div class="col-xs-12"> 
	     					<label for="card-name">Card Holder Name </lable> 
	     					<input type="text" id="card-name" class="form-control" required> 
	     				</div>
	     			 </div>	     			 

	     			<div class="row"> 
	     				<div class="col-xs-12"> 
	     					<label for="card-number">Card Number </lable> 
	     					<input type="text" id="card-number" class="form-control" required> 
	     				</div>
	     			 </div>	 
	     			<div class="row"> 
	     				<div class="col-xs-12"> 

	     					<div class="col-xs-6"> 
	     						<div class="form-group">
	     							<label for="card-expiry-month">Expiration Month </lable> 
	     							<input type="text" id="card-expiry-month" class="form-control" required>  
	     						</div>
	     						 
	     					</div>	  				
	     					<div class="col-xs-6"> 
	     						<div class="form-group"> 
	     							<label for="card-expiry-year">Expiration year </lable> 
	     							<input type="text" id="card-expiry-year" class="form-control" required> 
	     						</div>
	     					</div>
 	     				</div>
	     			</div>
	     			<div class="col-xs-12"> 
	     				<div class="form-group">
	     					<label class="" for="card-cvc"> CVC </label>
	     					<input type="text" id="card-cvc" class="form-control" required> 	
	     				</div>
	     			</div>
	     		</div>
	     		<button class="btn btn-success"> Buy Now</button> 	     			  
	     	</form>
	     </div>
</div>

